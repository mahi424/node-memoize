{
  "name": "node-memoize",
  "version": "1.0.3",
  "description": "Speed up the apps by memoize'ing both sync and async functions using map or redis. ",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.release.json",
    "prepublish": "npm run build",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern 'build/**/*.d.ts'",
    "lint:fix": "eslint ./src --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "Mahaveer Chouhan <mahi424@users.noreply.github.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahi424/node-memoize.git"
  },
  "bugs": {
    "url": "https://github.com/mahi424/node-memoize/issues"
  },
  "homepage": "https://github.com/mahi424/node-memoize",
  "keywords": [
    "memoize",
    "function",
    "redis",
    "map"
  ],
  "engines": {
    "node": ">= 16.13 <17"
  },
  "devDependencies": {
    "@types/jest": "~27.0.2",
    "@types/node": "~16.11.6",
    "@typescript-eslint/eslint-plugin": "~5.7.0",
    "@typescript-eslint/parser": "~5.7.0",
    "eslint": "~8.4.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-jest": "~25.3.0",
    "ioredis": "^5.0.4",
    "jest": "~27.4.4",
    "object-hash": "^3.0.0",
    "prettier": "~2.5.1",
    "rimraf": "~3.0.2",
    "ts-jest": "~27.1.1",
    "typescript": "~4.5.3"
  },
  "dependencies": {
    "debug": "^4.3.3",
    "tslib": "^2.3.1"
  },
  "volta": {
    "node": "16.13.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
